{{# if success }}
  <div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
      <div id="success" class="alert alert-success">
        {{ successMsg }}
      </div>
    </div>
  </div>
{{/if}}

{{# each products}}
  <div class="row">
    {{# each this}}
      <div class="card col-6 col-sm-6 col-md-4">
        <img 
          class="card-img-top img-fluid img-thumbnail" 
          src="{{ this.imagePath }}"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title">{{ this.title }}</h5>
          <p class="card-text">{{ this.description }}</p>
          <div>
            <div class="price float-left">${{ this.price }}</div>
            <a href="/add-to-cart/{{ this._id }}" class="btn btn-success float-right">Buy</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}